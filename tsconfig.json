{
	"extends": "@sindresorhus/tsconfig",
	"compilerOptions": {
		"outDir": "dist",
		"target": "es2020", // Node.js 14
		"lib": [
			"es2020"
		],
		"noPropertyAccessFromIndexSignature": false,
		"isolatedModules": true,
		"sourceMap": true
	},
	"include": [
		"src",
		"test"
	],
	"ts-node": {
		"esm": true,
		"transpileOnly": true,
		"files": true,
		"experimentalResolver": true
	}
}
